{
  "manifest_version": 3,
  "name": "CrossCheck",
  "version": "1.0.0",

  "description": "Crowdsourcing browser extension that allows users to contribute information about online content.",
  "permissions": ["activeTab", "contextMenus", "notifications"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the CrossCheck Overlay"
  },
  "background": {
    "service_worker": "static/js/serviceWorker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["static/js/contentScript.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
